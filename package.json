{
  "name": "@bavix/babichev-design",
  "version": "1.0.2",
  "description": "Pixel-style design system built with React, TypeScript, and Tailwind CSS",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles/main.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "design-system",
    "react",
    "typescript",
    "tailwindcss",
    "pixel-art",
    "components",
    "ui"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bavix/babichev-design.git"
  },
  "license": "MIT",
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "storybook build",
    "build:css": "mkdir -p dist/styles && npx postcss ./src/styles/main.css -o ./dist/styles/main.css --minify",
    "build:css:watch": "mkdir -p dist/styles && npx postcss ./src/styles/main.css -o ./dist/styles/main.css --watch",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "prepare": "husky install",
    "validate": "npm run lint:check && npm run type-check && npm run format:check && npm run test:run"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^10.0.8",
    "@storybook/addon-links": "^10.0.8",
    "@storybook/addon-themes": "^10.0.8",
    "@storybook/react-vite": "^10.0.8",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^8.0.3",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.1.1",
    "storybook": "^10.0.8",
    "@tailwindcss/postcss": "^4.1.17",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.4",
    "eslint-plugin-storybook": "10.0.8",
    "@storybook/addon-docs": "^10.0.8"
  }
}
